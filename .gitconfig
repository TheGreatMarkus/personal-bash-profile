	email = aldea.cristian@outlook.com
	name = Cristian Aldea
[pager]
	branch = false
[alias]
	unstage = reset HEAD --
	current-branch = rev-parse --abbrev-ref HEAD
	publish = !git push -u origin $(git current-branch)
	co = checkout
	s = status
	rlb = branch -m
	rrb = "!f() { git push origin --delete \"$1\" && git push origin -u \"$2\"; }; f"
	rb = "!f() { git rlb \"$2\" && git rrb \"$1\" \"$2\"; }; f"
	nuke = !git reset --hard && git clean -df
	sync = !git pull --rebase --prune && git push
	ac = !git add -A && git commit
	cp = !git commit && git push
	acp = !git add -A && git commit && git push
	uc = reset --soft HEAD~1
	fp = push --force-with-lease
	prune-branches = !git branch  | grep -v \\* | xargs git branch -D
[credential]
	helper = store
